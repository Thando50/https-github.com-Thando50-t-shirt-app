<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="t_shirt_app.MainPage">

    <StackLayout Margin="20,20,20,0">
        <Frame BackgroundColor="AliceBlue" Padding="24" CornerRadius="0">
            <Label Text="Welcome to Thandos T-Shirt Shopping App" HorizontalTextAlignment="Center" TextColor="Black" FontSize="36"/>
        </Frame>
        <Entry Placeholder="Name" x:Name="NameEntry"/>
            <Entry Placeholder="Gender" x:Name="genderName"/>
            <Entry Placeholder="Shirtsize" x:Name="size"/>
            <Entry Placeholder="shirtcolor" x:Name="colorName"/>
            <Entry Placeholder="Shipping Address" x:Name="addressname"/>
        <Button Text="Place your order" Clicked="savebutton_Clicked"/>
       
    </StackLayout>

</ContentPage>
